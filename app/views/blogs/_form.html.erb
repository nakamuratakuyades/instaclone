<%= form_with(model: @blog, local: true ,url: choose_new_or_edit ) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table class="table table-striped">
  <div class="blog_title">
    <tr>
      <th><%= form.label :title %></th><th><%= form.text_field :title %></th>
    </tr>
  </div>

  <div class="blog_title">
    <tr>
      <th><%= form.label :content %></th><th><%= form.text_field :content %></th>
    </tr>
  </div>
  </table>
  <div class="field">
    <%= form.label :image %>
    <!-- 確認画面から新規作成画面に戻った時に、 -->
    <!-- アップロードした画像を表示させるための記述 -->
    <%= image_tag(@blog.image.url) if @blog.image.url %>
    <%= form.file_field :image %>
  </div>

  <button class="btn" type="submit">登録する</button>
<% end %>
